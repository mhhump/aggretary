<%= render 'pages/home' unless user_signed_in? %>

<div id="doors" class="transitions-enabled">
  <% @doors.each do |door| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(door.image.url(:medium)), door %>
      <div class="panel-body">
        <%= door.name %><br/>
        <strong><%= door.user.name if door.user %></strong>
        <% if door.user == current_user %>
          <div class="actions">
            <%= link_to edit_door_path(door) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to door, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>