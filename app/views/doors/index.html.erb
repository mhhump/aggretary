<%= render 'pages/home' unless user_signed_in? %>

<div id="doors" class="transitions-enabled">
  <% @doors.each do |door| %>
    <div class="box panel panel-default">
      <%= link_to project_door_path(@project, door) do %>
      <%= door.name %>
      <% end %>
        
          <div class="actions">
            <%= link_to edit_project_door_path(@project, door) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to project_door_path(@project, door), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>