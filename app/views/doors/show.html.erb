<%= link_to 'Back', project_opening_path(@project, @opening) %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @door.image.url(:medium) %>
      </div> 
        <div class="panel-body">
            <p><strong><%= @door.name %></strong></p>
        <ol>
            <p><strong>Measure From:</strong>
            <%= @door.measure_from.capitalize %></p>
            <p><strong>Frame Material:</strong>
            <%= @door.frame_material.capitalize %></p>



        
        <p><strong><%= @door.opening.name if @door.opening %></strong></p>

        
		      <%= link_to edit_project_opening_door_path(@project, @opening, @door) do %>
		        <span class="glyphicon glyphicon-edit"></span>
		        Edit
		      <% end %>
   

      </div>
    </div>
  </div>
</div>

